@page "/employeecards"

@if (Employees is null)
{
    <LoadingIndicator></LoadingIndicator>
}
else
{
    <div class="row">
        @foreach (var e in Employees)
        {
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <EmployeeCard Employee="e"></EmployeeCard>
            </div>
        }
    </div>
}
